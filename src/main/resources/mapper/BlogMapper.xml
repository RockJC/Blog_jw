<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.awei.mapper.BlogMapper">

    <select id="BlogListPage" resultMap="BlogResultMap">
        SELECT
            b.blog_id, b.blog_title, b.blog_recommend, b.blog_published, b.blog_updtime, b.blog_ref_typeid, t.type_id, t.type_name
        FROM
            t_blog b
            inner JOIN t_type t ON b.blog_ref_typeid = t.type_id
        <if test="ew !=null">
            ${ew.customSqlSegment}
        </if>
    </select>
    <select id="BlogUpdateDetail" resultMap="BlogAllMap">
        select
            b.blog_id,b.blog_appreciation,b.blog_commentabled,b.blog_content,b.blog_descri,
            b.blog_firstpic,b.blog_flag,b.blog_recommend,b.blog_statement,
            b.blog_updtime,b.blog_views,b.blog_ref_typeid,b.blog_ref_userid,d.type_id,d.type_name,c.tag_id,c.tag_name
        from
            (t_blog b
            inner JOIN t_type d ON b.blog_ref_typeid = d.type_id)
            inner JOIN t_blogtag a ON b.blog_id = a.ref_blog_id
            LEFT JOIN t_tag c ON c.tag_id = a.ref_tag_id
            where b.blog_id = #{id}
    </select>
    <select id="BlogListIndex" resultMap="BlogIndexMap">
        SELECT
            b.blog_id, b.blog_title, b.blog_descri, b.blog_firstpic, b.blog_flag, b.blog_published,
            b.blog_recommend, b.blog_updtime, b.blog_views, b.blog_ref_typeid, t.type_id, t.type_name,
            u.user_id, u.user_avatar, u.user_nickname
        FROM
            t_blog b
            inner JOIN t_type t ON b.blog_ref_typeid = t.type_id
            inner JOIN t_user u ON b.blog_ref_userid = u.user_id
        <if test="ew !=null">
                ${ew.customSqlSegment}
        </if>
    </select>
    <select id="BlogListIndexByTime" resultType="com.awei.entity.Blog">
        SELECT *
        FROM t_blog b
        WHERE b.blog_recommend = TRUE
        ORDER BY b.blog_updtime DESC
    </select>
    <resultMap id="BlogResultMap" type="com.awei.entity.Blog">
        <id property="blogId" column="blog_id"/>
        <result property="blogTitle" column="blog_title"/>
        <result property="blogRecommend" column="blog_recommend"/>
        <result property="blogPublished" column="blog_published"/>
        <result property="blogUpdtime" column="blog_updtime"/>
        <result property="type_id" column="blog_ref_typeid"/>
        <association property="type" javaType="com.awei.entity.Type">
            <id property="typeId" column="type_id"/>
            <result property="typeName" column="type_name"/>
        </association>
    </resultMap>
    <resultMap id="BlogAllMap" type="com.awei.entity.Blog">
        <id property="blogId" column="blog_id"/>
        <result property="blogAppreciation" column="blog_appreciation"/>
        <result property="blogCommentabled" column="blog_commentabled"/>
        <result property="blogContent" column="blog_content"/>
        <result property="blogDescri" column="blog_descri"/>
        <result property="blogFirstpic" column="blog_firstpic"/>
        <result property="blogFlag" column="blog_flag"/>
        <result property="blogRecommend" column="blog_recommend"/>
        <result property="blogStatement" column="blog_statement"/>
        <result property="blogUpdtime" column="blog_updtime"/>
        <result property="blogViews" column="blog_views"/>
        <result property="type_id" column="blog_ref_typeid"/>
        <result property="user_id" column="blog_ref_userid"/>
        <association property="type" javaType="com.awei.entity.Type">
            <id property="typeId" column="type_id"/>
            <result property="typeName" column="type_name"/>
        </association>
        <collection property="blogtags" ofType="com.awei.entity.Blogtag">
            <association property="tag" javaType="com.awei.entity.Tag">
                <id property="tagId" column="tag_id"/>
                <result property="tagName" column="tag_name"/>
            </association>
        </collection>
    </resultMap>
    <resultMap id="BlogIndexMap" type="com.awei.entity.Blog">
        <id property="blogId" column="blog_id"/>
        <result property="blogTitle" column="blog_title"/>
        <result property="blogDescri" column="blog_descri"/>
        <result property="blogFirstpic" column="blog_firstpic"/>
        <result property="blogFlag" column="blog_flag"/>
        <result property="blogPublished" column="blog_published"/>
        <result property="blogRecommend" column="blog_recommend"/>
        <result property="blogUpdtime" column="blog_updtime"/>
        <result property="blogViews" column="blog_views"/>
        <result property="type_id" column="blog_ref_typeid"/>
        <association property="type" javaType="com.awei.entity.Type">
            <id property="typeId" column="type_id"/>
            <result property="typeName" column="type_name"/>
        </association>
        <association property="user" javaType="com.awei.entity.User">
            <id property="userId" column="user_id"/>
            <result property="userAvatar" column="user_avatar"/>
            <result property="userNickname" column="user_nickname"/>
        </association>
    </resultMap>
</mapper>
